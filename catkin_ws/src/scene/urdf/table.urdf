<?xml version="1.0"?>
<robot name="table">

  <link name="table_link">
    <!-- Visualizzazione -->
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scene/models/plane/meshes/airhockey-plane.dae" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="white">
        <color rgba="0.6 0.6 0.6 1"/>
      </material>
    </visual>

    <!-- Collisione -->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scene/models/plane/meshes/airhockey-plane.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>

    <!-- Inerzia base -->
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="80.0"/>
      <inertia ixx="2.5" ixy="0.0" ixz="0.0"
               iyy="2.5" iyz="0.0"
               izz="1.0"/>
   </inertial>      
  </link>
  
  <link name="table_borders_link">
    <!-- Visualizzazione -->
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scene/models/table_borders/meshes/airhockey-borders.dae" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>

    <!-- Collisione -->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scene/models/table_borders/meshes/airhockey-borders.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>

    <!-- Inerzia base (superflua se statico, ma non dÃ  problemi) -->
    <inertial>
      <mass value="10.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0"
               iyy="1.0" iyz="0.0"
               izz="1.0"/>
   </inertial>      
  </link>
  
  <!-- Joint fisso -->
  <joint name="table_fixed" type="fixed">
    <parent link="table_link"/>
    <child link="table_borders_link"/>
    <origin xyz="0 0 0"/>
  </joint>

 
</robot>
