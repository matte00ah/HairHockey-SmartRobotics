<?xml version="1.0"?>
<robot name="puck" xmlns:xacro="http://ros.org/wiki/xacro">

  <link name="puck_link">
    <!-- Visualizzazione -->
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scene/meshes/airhockey-puck.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1.0"/>
      </material>
    </visual>

    <!-- Collisione -->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scene/meshes/airhockey-puck.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <surface>
	  <friction>
	    <ode>
	      <mu>0.0001</mu>
	      <mu2>0.0001</mu2>
	    </ode>
	  </friction>
	  <bounce>
	    <restitution_coefficient>0.1</restitution_coefficient>
	  </bounce>
	</surface>
    </collision>

    <!-- Inerzia base -->
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="3.718e-05" ixy="0.0" ixz="0.0"
               iyy="3.718e-05" iyz="0.0"
               izz="6.541e-05"/>
    </inertial>
      
  </link> 
  
  <gazebo reference="puck_link">
	<material>Gazebo/Red</material>	
  </gazebo> 
  
</robot>
