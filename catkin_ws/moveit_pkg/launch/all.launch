<?xml version="1.0"?>
<launch>
  <!-- Lancia Gazebo con il robot Franka -->
  <include file="$(find franka_gazebo)/launch/panda.launch"/>

  <!-- Spawna tavolo e puck -->
  <include file="$(find scene)/launch/env.launch" />

  <!-- Avvia MoveIt -->
  <include file="$(find moveit_pkg)/launch/move_group.launch" />

  <!-- Argomenti -->
  <arg name="use_rviz" default="true" />
  <arg name="rviz_config" default="$(find moveit_pkg)/launch/moveit.rviz"/>
  <param name="moveit_controller_manager" value="simple"/>

  <!-- RViz -->
  <include file="$(find moveit_pkg)/launch/moveit_rviz.launch" if="$(arg use_rviz)">
    <arg name="rviz_config" value="$(arg rviz_config)" />
  </include>
</launch>

